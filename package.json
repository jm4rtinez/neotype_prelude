{
    "name": "@neotype/prelude",
    "version": "0.8.1",
    "description": "Functional programming essentials for TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/jm4rtinez/neotype_prelude.git"
    },
    "keywords": [
        "adt",
        "algebraic-data-types",
        "do-notation",
        "effects",
        "fluent-api",
        "functional-programming",
        "typescript"
    ],
    "author": "Josh Martinez",
    "license": "Apache-2.0",
    "homepage": "https://github.com/jm4rtinez/neotype_prelude#readme",
    "bugs": {
        "url": "https://github.com/jm4rtinez/neotype_prelude/issues"
    },
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": "16.* || >= 18.*"
    },
    "exports": {
        "./internal/*": null,
        "./cmb.js": "./dist/cmb.js",
        "./cmp.js": "./dist/cmp.js",
        "./either.js": "./dist/either.js",
        "./eval.js": "./dist/eval.js",
        "./fn.js": "./dist/fn.js",
        "./ior.js": "./dist/ior.js",
        "./maybe.js": "./dist/maybe.js",
        "./pair.js": "./dist/pair.js",
        "./validation.js": "./dist/validation.js",
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "npx rimraf ./dist",
        "lint": "npx eslint --ext .ts --max-warnings 0 .",
        "prettier:check": "npx prettier --check --ignore-path ./.gitignore .",
        "prettier:write": "npx prettier --write --ignore-path ./.gitignore .",
        "style": "npm run lint && npm run prettier:check",
        "test": "npx c8 mocha",
        "docs": "npx typedoc",
        "prebuild": "npm run clean",
        "build": "npx tsc --project ./tsconfig.build.json",
        "prepublishOnly": "npm run build",
        "postpublish": "npm run clean"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "c8": "^7.12.0",
        "chai": "^4.3.6",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "fast-check": "^3.0.1",
        "mocha": "^10.0.0",
        "prettier": "2.7.1",
        "prettier-plugin-organize-imports": "^3.1.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typedoc": "0.23.21",
        "typescript": "~4.9"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "ignorePatterns": [
            "dist"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": [
                "off"
            ],
            "@typescript-eslint/no-namespace": [
                "off"
            ],
            "no-inner-declarations": [
                "off"
            ],
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "always"
            ]
        }
    },
    "mocha": {
        "node-option": [
            "experimental-specifier-resolution=node",
            "loader=ts-node/esm",
            "no-warnings"
        ],
        "spec": [
            "test/*_test.ts"
        ]
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "overrides": [
            {
                "files": [
                    "*.yaml",
                    "*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ],
        "proseWrap": "always"
    },
    "volta": {
        "node": "18.12.1",
        "npm": "9.1.3"
    }
}
