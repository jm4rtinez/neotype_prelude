{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "importsNotUsedAsValues": "remove",
        "downlevelIteration": false,
        "newLine": "lf",
        "stripInternal": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "JSX.createElement",
        "jsxFragmentFactory": "JSX.Fragment"
    },
    "include": ["./docs", "./scripts", "./src", "./test"],
    "typedocOptions": {
        "entryPoints": "./src/*.ts",
        "entryPointStrategy": "expand",
        "excludePrivate": true,
        "name": "Neotype Prelude",
        "out": "./docs",
        "theme": "custom"
    }
}
