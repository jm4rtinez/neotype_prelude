{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": false,
    "newLine": "lf",
    "removeComments": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./src", "./test"]
}
